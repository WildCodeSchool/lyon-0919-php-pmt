{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}
{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1 style="text-align: center">Connexion âœ…</h1>

        {% if error %}
            <span class="error">{{ error.messageKey }}</span>

        {% endif %}

        <form action="{{ path('login') }}" method="POST">
            <div class="wrapper fadeInDown">
                <div id="formContent">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" name="_username" value="{{ last_username }}" placeholder="email">
                            </div>
                            <div class="form-group">
                                <input type="password" name="_password">
                            </div>
                            <div class="form-group">
                                <button class="btn-secondary" type="submit">Connexion</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
