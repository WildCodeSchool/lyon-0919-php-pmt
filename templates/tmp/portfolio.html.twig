{% extends 'base.html.twig' %}
{% block title %}Portfolio{% endblock %}

{% block body %}
    <style>
        .card {
            border: none;
        }

        img,
        .card-img-top {
            border-radius: 0em;
        }

        @media (min-width: 576px) {
            .card-columns {
                column-count: 2;
            }
        }

        @media (min-width: 768px) {
            .card-columns {
                column-count: 3;
            }
        }

        @media (min-width: 992px) {
            .card-columns {
                column-count: 4;
            }
        }

        @media (min-width: 1200px) {
            .card-columns {
                column-count: 5;
            }
        }
    </style>
    <div class="container">
        <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">Notre Portfolio </h1>

        <hr class="mt-2 mb-5">
        <div class="card-columns">
            {% for picture in pictures %}
                <a href="">
                    <div class="card">
                        <img class="card-img-top"
                             src="{{ ('/uploads/images/gallery/'~picture.name) }}"
                             alt=""
                             onclick="window.open(this.src,'_blank','toolbar=0, location=0, directories=0, status=0, scrollbars=0, resizable=0, copyhistory=0, menuBar=0, width='+this.width+', height='+this.height);">
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
    <div class="container">
        <h2 style="text-align: center;">Tu peux participer au portfolio ici :</h2>

        {{ form_start(form) }}
        {{ form_row(form.name) }}
        <label>Commentaire:</label>
        {{ form_widget(form.comments) }}

        <button class="btn btn-primary mt-2">Envoyer</button>
        {{ form_end(form) }}
    </div>

    <h2 style="text-align: center"> Mon espace photo</h2>
    <div class="container">
        <div class="card">
            <div class="row">
            {% for data in userData %}
                <div class="col-12  offset-lg-1 col-lg-3">
                    <img class="card-img-top" style="width: 50% ; margin-top: 10px; "
                         src="{{ ('/uploads/images/gallery/'~data.name) }}">
                    <form method="post" action="{{ path('pmt_picture_delete', {'id': data.id}) }}"
                          onsubmit="return confirm('Voulez vous vraiment supprimer cette photo ?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data.id) }}">
                        <button class="btn btn-danger mt-1">X</button>
                    </form>
                </div>
            {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}



