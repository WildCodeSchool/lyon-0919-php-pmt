{% extends 'base.html.twig' %}

{% block title %}L'équipe{% endblock %}
{% block body %}
    <div class="titleMembers">
        <h2>Membres de l'association</h2>
    </div>
    <div class="container">
        <div class="row">
            <div class="card-accueil mt-5 ml-5 mr-5 w-100" style="width: 30rem;">
                <div class="card-header"><h4>Comité directeur</h4></div>
                <div class="card-body">
                    <ul class="memberTeam w-100" style="list-style-type: none;">
                        {% for office in offices %}
                        <h4 class="titleOffice">{{ office.name }} :</h4>
                            {% for user in office.users %}
                                <span id="name">{{ user.firstname }} <strong class="lastName">{{ user.lastname|upper }}</strong></span>
                            {% endfor %}
                            <li><h5></h5></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="card-accueil mt-5 ml-5 mr-5 w-100">
                <div class="card-header w-100"><h4>Encadrants</h4></div>
                <div class="card-body w-100">
                    <ul class="levelTeam" style="list-style-type: none;">
                        {% for level in levels %}
                            <h4 class="levelName">{{ 'Niveau : ' ~ level.name }}</h4>
                            <div class="vignette">
                                {% for user in level.users %}
                                    <div class="vignetteMember">
                                        <img class="picture"
                                             src="uploads/images/users/{{ user.imageName}}"
                                             alt="photo encadrant">
                                        <div>
                                            <p class="card-text"
                                               id="name">{{ user.firstname }}</br>
                                                <strong>{{ user.lastname|upper }}</strong></p>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    {% include '_footer.html.twig' %}
{% endblock %}