{% extends 'base.html.twig' %}

{% block title %}Hello InscriptionClubController!{% endblock %}

{% block body %}
    {{ dump(inscriptionForm) }}
    <div>
        <div class="row">
            <div class="col-lg-10 col-md-9">
                {#            <!-- <div class="col-lg-1"><img src="img/ajout_contact.png" alt=""></div>-->#}
                {#            <h1 class="titre-contact">Le plongeur masqué de Trévoux</h1>#}
                {#            <h2 class="titre-contact">Bulletin d'inscription - Années {{ form_widget(inscriptionForm.inscription_year) }}</h2>#}
            </div>
            <div class="col-lg-2">
                <form>
                    <input id="impression" name="impression" type="button" value="Imprimer" class="btn btn-info"/>
                </form>
            </div>
        </div>

        <div class="container">

            <div class="sheet_title">
                <h2>Le plongeur masqué de Trévoux</h2>
                <p>Bulletin d'inscription -
                    Années {{ form_widget(inscriptionForm.inscriptionYear) }}</p>
                <div class="nb_com" style="display:none">9</div>
            </div>

            <div class="contact_container">
                <div class="col-lg-12">
                    <div class="titleprghp">
                        <span class="prg">Informations Adhérent</span>
                    </div>
                </div>
                <div class='row'>
                    <div class="col-lg-6">
                        <!--<form class="form-horizontal" role="form">-->
                        <div class="form-group">
                            <label for="nom" class="col-sm-2 control-label">Nom :</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.lastname, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="prenom" class="col-sm-2 control-label">Prenom :</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.firstname, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="mail" class="col-sm-2 control-label">Email :</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.mail, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tel" class="col-sm-2 control-label">Téléphone fixe :</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.homePhone, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="mobile" class="col-sm-2 control-label">Mobile :</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.mobilePhone, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <!--</form>-->
                    </div>

                    <div class="col-lg-6">
                        <!--<form class="form-horizontal" role="form">-->
                        <div class="form-group">
                            <label for="societe" class="col-sm-2 control-label">Date de
                                naissance</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.birthday) }}
                            </div>
                        </div>
                        <div class="form-group">

                            <label for="adresse" class="col-sm-2 control-label">Adresse</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.address, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="cp" class="col-sm-2 control-label">Code Postal</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.zipCode, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ville" class="col-sm-2 control-label">Ville</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.city, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="pays" class="col-sm-2 control-label">Commentaires</label>
                            <div class="col-sm-8">
                                {{ form_widget(inscriptionForm.comment) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">

                        <div class="col-lg-12">
                            <div class="titleprghp">
                                <span class="prg">Choix de l'assurance</span>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="programme"
                                       class="col-sm-8 control-label">Assurance individuelle
                                    AXA</label>
                                <div class="col-sm-8">
                                    <label class="checkbox inline no_indent">
                                        <input type="checkbox" id="inlineCheckbox3" value="option1">
                                        1
                                    </label>
                                    <label class="checkbox inline no_indent">
                                        <input type="checkbox" id="inlineCheckbox4" value="option2">
                                        2
                                    </label>
                                    <label class="checkbox inline no_indent">
                                        <input type="checkbox" id="inlineCheckbox5" value="option3">
                                        3
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-6">
                        <div class="col-lg-12">
                            <div class="titleprghp">
                                <span class="prg">Autres</span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
