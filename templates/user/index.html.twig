{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
        <tbody>
        <div class="container">
            <div class="row">
                <div class="col-8 col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class=" col-12 col-md-4 border-right">
                                    <h4>Adhérents</h4>
                                </div>
                                <div class="col-md-6">
                                    <a href="{{ path('user_new') }}">Ajouter un nouveau membre</a>
                                </div>

                            </div>
                            <div class="row">
                                <div class=" col-8 col-md-12">
                                    <table class="table table-hover ">
                                        <thead class="bg ">
                                        <tr>
                                            <th>
                                            </th>
                                            <th>Prénom</th>
                                            <th>Nom</th>
                                            <th>Email</th>
                                            <th>Editer</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                                {% for user in users %}
                                            <td><a href="{{ path('user_show', {'id': user.id}) }}"><small></small></a></td>
                                            <td><small>{{ user.firstname }}</small></td>
                                            <td><small>{{ user.lastname }}</small></td>
                                            <td><small>{{ user.email }}</small></td>
                                            <td>
                                                <a href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                                                <a href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                                            </td>

                                        </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}