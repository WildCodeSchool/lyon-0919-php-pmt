{{ form_start(form) }}

<div class="container">

    {# afficahge infos personnelle ( nom prenom adresse tel date anniv...#}
    <div class="inscriptionTitle col-12">
        <span>Informations Adhérent</span>
    </div>
    <div class="row">
        <div class="col-12 col-sm-6">
            {{ form_label(form.firstname) }}
            {{ form_widget(form.firstname) }}
        </div>
        <div class="col-12 col-sm-6">
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname) }}
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12 col-sm-6">
            {{ form_label(form.homePhone) }}
            {{ form_widget(form.homePhone) }}
        </div>
        <div class="col-12 col-sm-6">
            {{ form_label(form.mobilePhone) }}
            {{ form_widget(form.mobilePhone) }}
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>
    </div>
    {# adresse de l'adherent #}
    <div class="inscriptionTitle col-12">
        <span>Adresse</span>
    </div>

    <div class="row">
        <div class="col-12 col-sm-4">
            {{ form_label(form.address) }}
            {{ form_widget(form.address) }}
        </div>
        <div class="col-12 col-sm-4">
            {{ form_label(form.zipCode) }}
            {{ form_widget(form.zipCode) }}
        </div>
        <div class="col-12 col-sm-4">
            {{ form_label(form.city) }}
            {{ form_widget(form.city) }}
        </div>
    </div>
    {# anniversaire #}
    <div class="inscriptionTitle col-12">
        <span>Date de naissance</span>
    </div>
    <div class="row">
        <div class="col-12">
            {{ form_widget(form.birthday) }}
        </div>
    </div>
    {# email #}
    <div class="inscriptionTitle col-12">
        <span>Photos de profil</span>
    </div>
    <div class="row">
        <div class="col-12 offset-sm-3 col-sm-4">
            {{ form_widget(form.ImageFile) }}
        </div>
    </div>

    {# comment #}
    <div class="inscriptionTitle col-12">
        <span>Commentaire</span>
    </div>
    <div class="row">
        <div class="col-12 offset-sm-2 col-sm-8">
            {{ form_widget(form.comment) }}

        </div>
    </div>

    {#        validation si pas admin #}
    <div class="row text-center">
        <a href="{{ path('account_index') }}" class="btn btn-primary col-12 col-sm-4 offset-sm-1 mt-5 mb-5">
           Retour
        </a>
        <button class="btn btn-primary col-12  col-sm-4  offset-sm-2 mt-5 mb-5">{{ button_label|default('Mettre à jour') }}</button>
    </div>


</div>

{{ form_end(form) }}
