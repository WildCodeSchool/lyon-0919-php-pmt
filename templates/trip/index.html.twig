{% extends 'base.html.twig' %}

{% block title %}Liste des voyages{% endblock %}

{% block body %}

    <div class="container">
        <h1>Récapitulatif de vos sorties annuelles</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Numéro</th>
                <th>Prix</th>
                <th>Date de début</th>
                <th>Nombres de plongeurs</th>
                <th>Nombres de Moniteurs</th>
                <th>Créer le :</th>
                <th>Mise a jour le :</th>
                <th>Date de fin :</th>
                <th>Description</th>
                <th>Lieu </th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for trip in trips %}
                <tr>
                    <td>{{ trip.id }}</td>
                    <td>{{ trip.price }}</td>
                    <td>{{ trip.dateStart ? trip.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trip.nbDiver }}</td>
                    <td>{{ trip.nbMonitor }}</td>
                    <td>{{ trip.createdAt ? trip.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trip.updatedAt ? trip.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trip.dateEnd ? trip.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trip.description }}</td>
                    <td>{{ trip.location }}</td>
                    <td>{{ trip.name }}</td>
                    <td>
                        <a href="{{ path('trip_show', {'id': trip.id}) }}">show</a>
                        <a href="{{ path('trip_edit', {'id': trip.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('trip_new') }}">Ajouter une nouvelle sortie</a>
    </div>
{% endblock %}
