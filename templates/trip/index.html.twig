{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des voyages{% endblock %}

{% block body %}
<h1 style="padding: 10px;text-align: center; margin-bottom: 20px">Récapitulatif de vos sorties annuelles</h1>
<div class="col-12 col-md-12">
    <button class="btn btn-secondary" style="display: block; margin: auto;"><a href="{{ path('trip_new') }}">Ajouter
            une nouvelle sortie</a>
    </button>
    <div class="container">
        <div class="card text-center">
            {% for trip in trips %}
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('trip_edit', {'id': trip.id}) }}">Editer</a>
                        </li>
                        <li class="nav-item">
                            {{ include('trip/_delete_form.html.twig') }}
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('trip_show', {'id': trip.id}) }}">Voir la Sortie</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ trip.name }}</h5>
                    <p class="card-text">{{ trip.description }}</p>
                    <h4>Liste des membres inscrits</h4>
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Numéro de téléphone </th>
                            <th scope="col">Statut</th>

                        </tr>
                        </thead>
                        <tbody>
                        </tr>
                        </tbody>
                    </table>

                </div>

            {% else %}
                <tr>
                    <td colspan="12">Aucunes sorties</td>
                </tr>
            {% endfor %}
        </div>
    </div>
</div>
    {% endblock %}
