{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des voyages{% endblock %}

{% block body %}
    <h1 style="padding: 10px;text-align: center; margin-bottom: 20px">RÃ©capitulatif de vos sorties annuelles</h1>
    <div class="col-12 col-md-12">
    <button class="btn btn-secondary" style="display: block; margin: auto;"><a href="{{ path('trip_new') }}">Ajouter
            une nouvelle sortie</a>
    </button>
    {% for trip in trips %}
        <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('trip_edit', {'id': trip.id}) }}">Editer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Supprimer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('trip_show', {'id': trip.id}) }}">Voir la Sortie</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ trip.name }}</h5>
            <p class="card-text">{{ trip.description }}</p>
        </div>

    {% else %}
        <tr>
            <td colspan="12">Aucunes sorties</td>
        </tr>
        </div>
        </div>
    {% endfor %}
{% endblock %}
